---

whereami: "#production/group_vars/usrc"

# Our Ansible Master
# The pubkey for root on ans-master
ansible_id_rsa_key: "ssh-rsa  root@ans-master.usrc"

# Our Configuration Management (CM) server
cm: "usrc-cm"
cm_ipaddr: "10.0.3.46"
## The pubkey for root on usrc-cm
cm_id_rsa_key: "ssh-rsa  root@usrc-cm.usrc"

# Domain Name servers
dns_servers:
  - search: usrc
    nameservers:
      - "10.0.3.145"

# Our User Gateway server
# If there is no gateway then set hostname and ssh_key to empty ("")
gateway:
  gate1:
   gateway_hostname: "usrc-gate"
   gateway_ipaddr: "10.0.3.146"
   gateway_comment: "{{ whereami }}"
   gateway_ssh_key: "usrc-gate.usrc,usrc-gate,10.0.3.146 ssh-rsa "

# Network Time Protocol
ntp_server: usrc-cm.usrc

# Not sure about this. We have no common local-update repos like this ... not all systems are even RHEL.
repo_local_updates_yum_repo:
  - baseurl: "https://usrc-dist.lanl.gov/distros/RHEL7/LANL/arch/local-updates-usrc/RPMS"
    enabled: "no"

# Entries that should be in everyone's /etc/ssh/ssh_known_hosts
ssh_known_hosts:
  ssh_known_hosts1:
    ssh_known_hosts_cm_ssh_key: "usrc-cm.usrc,usrc-cm,10.0.3.46 ssh-rsa "

# Central syslog server 
syslog_remote_host: "*.info @usrc-log.usrc:514"
